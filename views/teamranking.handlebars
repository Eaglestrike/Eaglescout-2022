<nav class="blue darken-2">
    <div class="nav-wrapper container">
        <div class="col s12">
            <a href="/scout" class="breadcrumb">Scout</a>
            <a href="/scout/teamranking" class="breadcrumb">Team Ranking</a>
        </div>
    </div>
</nav>

{{#if success_msg}}
<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <div class="row">
            <div class="info-message green white-text">
                {{success_msg}}
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if error_msg}}
<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <div class="row">
            <div class="info-message red darken-1 white-text">
                {{error_msg}}
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if error}}
<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <div class="row">
            <div class="info-message red darken-1 white-text">
                {{error}}
            </div>
        </div>
    </div>
</div>
{{/if}}

<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<h1 class="header center blue-text text-darken-4">Eaglescout<span class="bullet"> &bull; </span><span class="subtitle">Team Ranking</span></h1>
		<br>
        <form method="post" action="/admin/event">
            <div class="input-field col s12">
                
            </div>
            
        </form>
        <div class="input-field col s12">
            <select id="ranking-event-select" multiple>
                {{#if events}}
                    {{#each events}}
                        {{#if current }}
                            <option value="{{ key }}" selected>{{ name }}</option>
                        {{else}}
                            <option value="{{ key }}">{{ name }}</option>
                        {{/if}}
                    {{/each}}
                {{/if}}
            </select>
            <label for="ranking-event-select">Select Events</label>
        </div>
        <div class="input-field col s12">
            <select id="ranking-filter-select">
                <option value="">Default</option>
                <option value="points" {{#if points}} selected {{/if}}>Points</option>
                <option value="goals" {{#if goals}} selected {{/if}}>Goals</option>
                <option value="climb" {{#if climb}} selected {{/if}}>Climbing</option>
                <option value="defense" {{#if defense}} selected {{/if}}>Defense</option>
            </select>
            <label for="ranking-filter-select">Select a Filter</label>
        </div>
        <div class="center">
            <button id="ranking-filters-submit" class="btn waves-effect waves-light red">Apply Filters</button>
        </div>
        <br>
        {{{ranking rankings filter}}}
	</div>
</div>